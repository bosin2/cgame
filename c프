#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <windows.h>

void print_slow(const char* str) {
    for (int i = 0; i < strlen(str); i++) {
        printf("%c", str[i]);
        fflush(stdout);
        Sleep(80);
    }
}

int totalGold = 0;
int totalStrength = 0;
int totalHeart = 3;
int totalHealth = 100;

void Gold(int amount) {
    totalGold += amount;
}

void Strength(int amount) {
    totalStrength += amount;
}

void Heart(int amount) {
    totalHeart -= amount;
}

void Health(int amount) {
    totalHealth += amount;
}

void printStatus() {
    printf("_______상 태 창_______\n");
    printf("|                     |\n");
    printf("| > 소지금: %d        |\n", totalGold);
    printf("|                     |\n");
    printf("| > 공격력: %d        |\n", totalStrength);
    printf("|                     |\n");
    printf("| > 체력: %d          |\n", totalHealth);
    printf("|                     |\n");
    printf("| > 목숨: %d          |\n", totalHeart);
    printf("|_____________________|\n");
}

void startChoice() {
    print_slow("\"시간이 없어요 용사님. 빨리 마왕을 무찌르러 가주세요.\"\n");
    print_slow("1. > 알겠습니다. 당장 출발하겠습니다.\n");
    print_slow("2. > 네? 그게 무슨 소리에요. 여긴 어딘데요?\n");

    char choice;
    scanf(" %c", &choice);

    if (choice == '1') {
        print_slow("\"감사합니다! 당신의 앞길의 축복이 깃들길! 여기 지원품 입니다!\"\n");
        print_slow("당신은 100G와 철 검을 얻었습니다.\n\n");
        Gold(100);
        Strength(10);
    }
    else if (choice == '2') {
        print_slow("\"하아, 어서 출발하세요. 여기요.\"\n");
        print_slow("당신은 50G와 나무검을 얻었습니다.\n\n");
        Gold(50);
        Strength(5);
    }
    else {
        print_slow("\"뭐라 하시는거에요?\"\n");
        startChoice();
    }
}

void intro() {
    print_slow("끼--익 !!!! 쾅- !!!!\n"
        "'아아... 이렇게 트릭에 치여 삶을 마감하는 건가'\n"
        "눈앞이 점멸하며 주마등이 스쳐 지나가...\n"
        "지 않고 낯선 천장이 날 맞이했다\n"
        "'아?'\n"
        "나 트럭에 치였는데?\n"
        "주변을 둘러보니 꽤나 고풍스럽다. 그리고 사람이... 왜이리 많아!??\n"
        "뭐지여기어디지당신들누구야저너무무서워요\n"
        "수 많은 사람들 중 한 여성이 날 향해 입을 열었다\n"
        "'일어나세요 용사님. 당신을 기다렸답니다.\n"
        "'네?'\n"
        "'2147483536번 째 용사님, 마왕을 무찔러 저희를 구해주세요'\n"
        "'네?'\n");

    startChoice();
}

int main() {
    char choice;
    print_slow("일어나세요, 용사님\n");
    print_slow("> 일어나기(a)\n");
    scanf(" %c", &choice);
    if (choice == 'a') {
        intro();
    }
    else {
        print_slow("\"용사님, 일어나세요\"\n");
    }

    return 0;
}
